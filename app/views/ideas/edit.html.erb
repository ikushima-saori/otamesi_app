<div class='container'>
  <header class="mx-auto text-center bg-dark text-white">
    <h1>ネタ編集</h1>
  </header>

  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <%= form_with model: @idea do |f| %>
        <div>
          <label for="inputCategory">ジャンルやCP</label><br />
          <%= f.text_field :category, autofocus: true, id:"inputCategory" %>
        </div>
        <div>
          <label for="inputTag">タグ・キーワード</label><br />
          <%= f.text_area :tag, id:"inputTag" %>
        </div>
        <div>
          <label for="inputBody">ネタ</label><br />
          <%= f.text_area :body, id:"inputBody" %>
        </div>
        <div>
          <%= f.submit "更新" %>
        </div>
      <% end %>
    </div>
  </div>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <p>本のタイトル</p>
      <p>本文</p>
    </div>
  </div>
</div>