<div class='container px-5 px-sm-0'>
  <header class="mx-auto text-center bg-dark text-white">
    <h1>創作仲間たち</h1>
  </header>

  <div class='row'>
    <div class='col-md-3'>
      <div>
        <h2>User info</h2>
        <%= render 'info', user: current_user %>
      </div>
      <div><%= render 'layouts/menu' %></div>
    </div>
    <div class='col-md-8 offset-md-1'>
      <% @users.each do |user| %>
        <div>
          <%= link_to user_path(user.id) do %>
            <%= image_tag user.get_profile_image(100,100) %>
            <span><%= user.name %></span>
          <% end %>
          <span>フォローボタン</span>
        </div>
        <p>好物</p>
        <p><%= user.preference %></p>

        <p>苦手</p>
        <p><%= user.weak %></p>

        <p>ネタ数：〇</p>
      <% end %>
    </div>
  </div>
</div>
